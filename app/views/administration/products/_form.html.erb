<%= simple_form_for(@product, :url => (@product.new_record? ? administration_products_path : administration_product_path)) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :name, wrapper_html: {class: "field"} %>
  <%= f.input :url_segment, wrapper_html: {class: "field"} %>
  <%= f.input :subcode, wrapper_html: {class: "field"} %>
  <%= f.input :description, wrapper_html: {class: "field"} %>
  <%= f.input :strapline, wrapper_html: {class: "field"} %>
  <%= f.input :meta_keywords, wrapper_html: {class: "field"} %>
  <%= f.input :meta_description, wrapper_html: {class: "field"} %>
  <%= f.association :categories, as: :select, label: 'Category: ', wrapper_html: {class: "field"} %>

  <%= f.submit wrapper_html: {class: "actions"} %>

<% end %>
